# Bucket to store website

resource "google_storage_bucket" "data" {
  name          = "sample-trees-data"
  location      = "us-central1"
  storage_class = "regional"
  force_destroy = true
}

# create a folder in the bucket

resource "google_storage_bucket_object" "temp_folder" {
  name    = "temp/" # folder name should end with '/'
  content = " "     # content is ignored but should be non-empty
  bucket  = google_storage_bucket.data.name
}

# Upload the sample data file to the bucket

resource "google_storage_bucket_object" "src_csv" {
  name   = "treesampledata.json"
  source = "../data/treesampledata.json"
  bucket = google_storage_bucket.data.name
}

# Upload the schema file to the bucket

resource "google_storage_bucket_object" "src_csv1" {
  name   = "schema.json"
  source = "../data/schema.json"
  bucket = google_storage_bucket.data.name
}

resource "google_bigquery_dataset" "default" {
  dataset_id                  = "trees_dataset"
  location                    = "us-central1"
  friendly_name               = "sample"
  description                 = "This is a sample table"
  default_table_expiration_ms = 3600000

  labels = {
    env = "dev"
  }
}

resource "google_bigquery_table" "table1" {
  dataset_id = google_bigquery_dataset.default.dataset_id
  table_id   = "treesdata"
  time_partitioning {
    type = "DAY"
  }

  labels = {
    env = "default"
  }

  schema              = <<EOF
[
  {
    "name": "tree_id",
    "type": "INT64",
    "mode": "REQUIRED",
    "description": "Tree ID"
  },
  {
    "name": "legal_status",
    "type": "STRING",
    "mode": "NULLABLE",
    "description": "Legal Status"
  },
  {
    "name": "species",
    "type": "STRING",
    "mode": "NULLABLE",
    "description": "Species"
  },
  {
    "name": "address",
    "type": "STRING",
    "mode": "NULLABLE",
    "description": "Address"
  },
  {
    "name": "site_order",
    "type": "INT64",
    "mode": "NULLABLE",
    "description": "Site Order"
  },
  {
    "name": "site_info",
    "type": "STRING",
    "mode": "NULLABLE",
    "description": "Site Info"
  },
  {
    "name": "plant_type",
    "type": "STRING",
    "mode": "NULLABLE",
    "description": "Plant Type"
  },
  {
    "name": "care_taker",
    "type": "STRING",
    "mode": "NULLABLE",
    "description": "Care Taker"
  },
  {
    "name": "care_assistant",
    "type": "STRING",
    "mode": "NULLABLE",
    "description": "Care Assistant"
  },
  {
    "name": "plant_date",
    "type": "TIMESTAMP",
    "mode": "NULLABLE",
    "description": "Plant Date"
  },
  {
    "name": "dbh",
    "type": "STRING",
    "mode": "NULLABLE",
    "description": "DBH"
  },
  {
    "name": "plot_size",
    "type": "STRING",
    "mode": "NULLABLE",
    "description": "Plot Size"
  },
  {
    "name": "permit_notes",
    "type": "STRING",
    "mode": "NULLABLE",
    "description": "Permit Notes"
  },
  {
    "name": "x_coordinate",
    "type": "FLOAT",
    "mode": "NULLABLE",
    "description": "X Coordinate"
  },
  {
    "name": "y_coordinate",
    "type": "FLOAT",
    "mode": "NULLABLE",
    "description": "Y Coordinate"
  },
  {
    "name": "latitude",
    "type": "FLOAT",
    "mode": "NULLABLE",
    "description": "Latitude"
  },
  {
    "name": "longitude",
    "type": "FLOAT",
    "mode": "NULLABLE",
    "description": "Longitude"
  },
  {
    "name": "location",
    "type": "STRING",
    "mode": "NULLABLE",
    "description": "Location"
  }
]
EOF
  deletion_protection = false
}

# Create output table for Bad Records

resource "google_bigquery_table" "table2" {
  dataset_id = google_bigquery_dataset.default.dataset_id
  table_id   = "badrecordstable"

  time_partitioning {
    type = "DAY"
  }

  labels = {
    env = "dev"
  }

  schema              = <<EOF
[
  {
    "name": "tree_id",
